{
  "name": "rubolt",
  "displayName": "Rubolt Language Support",
  "description": "Syntax highlighting and language support for Rubolt (.rbo) files",
  "version": "1.0.0",
  "publisher": "piratebomber",
  "engines": {
    "vscode": "^1.60.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:rubolt"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rubolt",
        "aliases": [
          "Rubolt",
          "rubolt"
        ],
        "extensions": [
          ".rbo"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rubolt",
        "scopeName": "source.rubolt",
        "path": "./syntaxes/rubolt.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[rubolt]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
      }
    },
    "commands": [
      {
        "command": "rubolt.run",
        "title": "Run Rubolt File",
        "category": "Rubolt"
      },
      {
        "command": "rubolt.repl",
        "title": "Start Rubolt REPL",
        "category": "Rubolt"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rubolt",
      "properties": {
        "rubolt.executablePath": {
          "type": "string",
          "default": "rbcli",
          "description": "Path to the Rubolt CLI executable"
        },
        "rubolt.enableLSP": {
          "type": "boolean",
          "default": true,
          "description": "Enable Rubolt Language Server Protocol support"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piratebomber/Rubolt/vscode-rubolt"
  }
}
